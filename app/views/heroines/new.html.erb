<h1>Create a new Superheroine!</h1>

<% if @heroine.errors.any? %>
<ul>
  <% @heroine.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @heroine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>
  <%= f.label :super_name %>
  <%= f.text_field :super_name %><br><br>
  <%= f.label :power %>
  <%= f.collection_select(:power_id, Power.all, :id, :name, prompt: true) %><br><br>
  <%= f.submit %>
<% end %>
