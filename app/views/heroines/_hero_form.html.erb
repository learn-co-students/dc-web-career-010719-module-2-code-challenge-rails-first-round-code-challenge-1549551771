<% if @heroine.errors.any? %>
  <div id="error_explanation">
    <h2>
    <%= pluralize(@heroine.errors.count, "error") %> prohibit this hero from being saved!
    </h2>
    <ul>
    <% @heroine.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
 <% end %>


<%= form_for @heroine do |hero| %>
  <%= hero.label "Name: " %>
  <%= hero.text_field :name %>
  <br>
  <br>
  <%= hero.label "Super name:" %>
  <%= hero.text_field :super_name %>
  <br>
  <br>
  <%= hero.label "Power: "%>
  <%=hero.collection_select(:power_id, Power.all, :id, :name, prompt: true)%>
  <br>
  <br>
  <%= hero.submit  %>

<%end %>
